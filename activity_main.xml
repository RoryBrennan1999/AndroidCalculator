<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2 + 3"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:id="@+id/workingsTextView"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="5"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="45sp"
            android:id="@+id/resultTextView"
            tools:ignore="RtlCompat" />/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="clearOnClick"
                android:text="C"
                android:textColor="@color/white"
                app:backgroundTint="@color/red" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="bracketsOnClick"
                android:text="()"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="powerOfOnClick"
                android:text="^"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="divisionOnClick"
                android:text="/"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="sevenOnClick"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/calcButtonTextSize"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="eightOnClick"
                android:text="8"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="nineOnClick"
                android:text="9"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="multiplyOnClick"
                android:text="X"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="fourOnClick"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/calcButtonTextSize"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="fiveOnClick"
                android:text="5"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="sixOnClick"
                android:text="6"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="minusOnClick"
                android:text="-"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="oneOnClick"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/calcButtonTextSize"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="twoOnClick"
                android:text="2"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="threeOnClick"
                android:text="3"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="addOnClick"
                android:text="+"
                android:textColor="@color/orange"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="decimalOnClick"
                android:text="."
                android:textColor="@color/white"
                android:textSize="@dimen/calcButtonTextSize"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="zeroOnClick"
                android:text="0"
                android:textColor="@color/white"
                app:backgroundTint="@null" />


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/orange"
                android:textSize="@dimen/calcButtonTextSize"
                android:onClick="equalOnClick"
                android:text="="
                android:textColor="@color/white"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>